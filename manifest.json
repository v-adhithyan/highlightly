{
	"manifest_version":2,
	"name":"Highlightly",
	"description": "Highlight content in web pages.",
	"version":"1.0",
	"icons":{
			"16":"icons/icon16.png",
			"48":"icons/icon48.png",
			"128":"icons/icon128.png"
		},	
	
	"content_scripts":[
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["scripts/main.js"]
		}
	],

	"browser_action":{
		"default_title":"Hightlight content in web pages.",
		"default_icon":{
				"38":"icons/icon38.png"
				}
		},

	"permissions":[
			"activeTab",
			"idle",	
			"storage",
			"tabCapture",
			"tabs",
			"contextMenus",
			"http://*/*",
			"https://*/*"
		      ],
	
	"background": {
		"persistent": false,
		"scripts": ["scripts/background.js"]
		}
}
